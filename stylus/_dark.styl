/*
	Tile Types
*/
.game-screen-world			
	.game-object
		color: #fff
		background-color #fff
		
	.game-object-player
		background-color transparent
		color red
		
	.game-object-ice 
		background-color #eee
		color fg(@background-color, 20%)
		
	.game-object-polar 
		background-color #bbf
		color fg(@background-color, 20%)

	.game-object-beach 
		background-color #FFF830
		color fg(@background-color, 20%)
		
	.game-object-shallowsea 
		background-color #2743C2
		color fg(@background-color, 20%)
		
	.game-object-sea 
		background-color #142EA6
		color fg(@background-color, 20%)
		
	.game-object-deepsea 
		background-color #00198A
		color fg(@background-color, 20%)
		
	.game-object-mountain 
		background-color #333
		color fg(@background-color, 20%)
		
	.game-object-snowymountain 
		background-color #aab
		color fg(@background-color, 20%)
		
	.game-object-tundra 
		background-color rgb(128,128,196)
		color fg(@background-color, 20%)
		
	.game-object-taiga 
		background-color rgb(64,128,144)
		color fg(@background-color, 20%)
		
	.game-object-savannah 
		background-color #88B05D
		color fg(@background-color, 20%)
		
	.game-object-rainforest 
		background-color rgb(32,192,192)
		color fg(@background-color, 20%)
		
	.game-object-seasonalforest 
		background-color rgb(64,160,144)
		color fg(@background-color, 20%)
		
	.game-object-forest 
		background-color rgb(96,160,128)
		color fg(@background-color, 20%)
		
	.game-object-shrubland
		background-color rgb(128,160,128)
		color fg(@background-color, 20%)
		
	.game-object-plains
		background-color rgb(25,255,25)
		color fg(@background-color, 20%)
		
	.game-object-desert 
		background-color rgb(224,255,128)
		color fg(@background-color, 20%)
			

#game		
	.game-screen-dungeon	
		.visited
			visibility visible
		.notvisited
			visibility hidden
		.game-object 
			color game-object-color
			background-color game-object-background

		.game-object.notvisible
			color game-object-notvisible-color

		.game-object.visible
			background-color game-object-visible-background
			lights()
			
		.game-object-tree
			color game-object-tree-color
			background-color game-object-tree-background
			
		.game-object-rock
			color game-object-rock-color
			background-color game-object-rock-background