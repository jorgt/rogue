border-radius() {
	-webkit-border-radius arguments
	-moz-border-radius    arguments
	border-radius         arguments
}

animate() {
	-webkit-animation: 	  arguments /* Safari 4+ */
	-moz-animation:       arguments /* Fx 5+ */
	-o-animation:         arguments /* Opera 12+ */
	animation:            arguments /* IE 10+, Fx 29+ */
}

fg(color, percent = 10%)
	if light(color)
		darken(color, percent)
	else
		lighten(color, percent)

@keyframes pulselight {
  0%   { opacity: 1 }
  10%  { opacity: 0.85 }
  20%   { opacity: 0.90 }
  50%  { opacity: 0.85 }
  75%  { opacity: 0.75 }
  100% { opacity: 0.95 }
}

lights() {
	animate(pulselight 5s linear infinite alternate)
}

box-sizing-inside() {
	box-sizing border-box
	-moz-box-sizing border-box
	-webkit-box-sizing border-box
	border args
}